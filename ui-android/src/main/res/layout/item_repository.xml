<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="96dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_repository_image"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_gravity="center_vertical"
        android:layout_margin="@dimen/vertical_margin_small"
        android:contentDescription="@string/description_repository_avatar"
        android:src="#000" />

    <LinearLayout
        android:id="@+id/ll_repository_info"
        android:layout_width="match_parent"
        android:layout_height="96dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_username_repository"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:gravity="center_vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="username/repository" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_stars"
                android:layout_width="0dp"
                android:layout_height="32dp"
                android:layout_weight="1"
                android:drawableStart="@drawable/ic_star"
                android:gravity="center"
                tools:text="41" />

            <TextView
                android:id="@+id/tv_forks"
                android:layout_width="0dp"
                android:layout_height="32dp"
                android:layout_weight="1"
                android:drawableStart="@drawable/ic_fork"
                android:gravity="center"
                tools:text="2" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_last_changed"
                android:layout_width="0dp"
                android:layout_height="32dp"
                android:layout_weight="1"
                android:drawableStart="@drawable/ic_last_changed"
                android:gravity="center"
                tools:text="21.09.2017 12:12" />

            <TextView
                android:id="@+id/tv_language"
                android:layout_width="0dp"
                android:layout_height="32dp"
                android:layout_weight="1"
                android:drawableStart="@drawable/ic_language"
                android:gravity="center"
                tools:text="javascript" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>